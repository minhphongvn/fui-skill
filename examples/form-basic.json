{
    "_comment": "Basic Form Template - Use as starting point for data input forms",
    "data": [
        {
            "formData": {
                "field1": "",
                "field2": null,
                "field3": false
            }
        },
        {
            "submitForm": {
                "CONFIRM": "Xác nhận lưu dữ liệu?",
                "API": "/api/endpoint",
                "IN": {
                    "Field1": "formData.field1",
                    "Field2": "formData.field2",
                    "Field3": "formData.field3"
                },
                "CALLBACK": {
                    "MESS": "Lưu thành công!"
                }
            }
        }
    ],
    "controls": [
        {
            "prop": "fluid grid-list-md",
            "rows": [
                {
                    "prop": "row",
                    "cols": [
                        {
                            "el": "v-text-field",
                            "attr": {
                                "v-model": "formData.field1",
                                "label": "Trường văn bản",
                                "outlined": true,
                                "dense": true,
                                ":required": true
                            },
                            "w": "6"
                        },
                        {
                            "el": "v-select",
                            "attr": {
                                "v-model": "formData.field2",
                                "label": "Chọn giá trị",
                                ":items": [
                                    {
                                        "text": "Tùy chọn 1",
                                        "value": 1
                                    },
                                    {
                                        "text": "Tùy chọn 2",
                                        "value": 2
                                    }
                                ],
                                "outlined": true,
                                "dense": true
                            },
                            "w": "6"
                        },
                        {
                            "el": "v-checkbox",
                            "attr": {
                                "v-model": "formData.field3",
                                "label": "Đồng ý điều khoản"
                            },
                            "w": "12"
                        },
                        {
                            "el": "v-btn",
                            "attr": {
                                "color": "primary",
                                "v-on:click": "CALL(vueData.submitForm)"
                            },
                            "innerHTML": "Lưu",
                            "w": "12"
                        }
                    ]
                }
            ]
        }
    ]
}